<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner_white"
        android:orientation="horizontal">

        <AutoCompleteTextView
            android:id="@+id/search_act_autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:paddingLeft="48dp"
            android:textSize="16dp"
            android:background="@android:color/transparent"
            android:hint="Please enter your place">
        </AutoCompleteTextView>
        <ImageButton
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:id="@+id/search_act_go_back"
            android:background="@drawable/menu_click"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_height="48dp"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:id="@+id/delete_text"
            android:background="@drawable/menu_click"
            android:src="@drawable/ic_clear_black_24dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#e6a8a8a8"/>
    <com.rey.material.widget.Button
        android:id="@+id/search_act_current_loc"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="#000000"
        android:paddingLeft="12dp"
        android:drawablePadding="12dp"
        android:drawableLeft="@drawable/ic_my_location_black_24dp"
        android:background="@drawable/rounded_corner_white"
        android:gravity="left|center_vertical"
        app:rd_enable="true"
        app:rd_rippleColor="#ffc3c3c3"
        app:rd_maxRippleRadius="match_view"
        app:rd_rippleType="touch"
        android:text="Use Current Location"/>
</LinearLayout>
