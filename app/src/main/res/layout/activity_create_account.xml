<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@color/ColorPrimary"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_big"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_up"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_action_email"
                android:layout_gravity="center"
                android:layout_height="48dp" />
            <EditText
                android:id="@+id/create_acc_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:hint="E-Mail"
                android:background="@null"

                android:textColor="#000000" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e8e8e8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_down"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_action_secure"
                android:layout_gravity="center"
                android:layout_height="48dp" />
            <EditText
                android:id="@+id/create_acc__pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:hint="Enter a Password"
                android:background="@null"
                android:textColor="#000000"/>
        </LinearLayout>

        <com.rey.material.widget.Button
            android:id="@+id/create_acc_create_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_corner_red"
            app:rd_enable="true"
            app:rd_rippleColor="#ffb34117"
            app:rd_maxRippleRadius="match_view"
            app:rd_rippleType="touch"
            android:text="Create Account"/>

    </LinearLayout>


</LinearLayout>
