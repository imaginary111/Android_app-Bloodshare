<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="@color/ColorPrimary"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_big"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_weight="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_up"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_action_email"
                android:layout_gravity="center"
                android:layout_height="48dp" />
            <EditText
                android:id="@+id/login_act_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:hint="E-mail Address"
                android:background="@null"
                android:textColorHint="#ffaeaeae"
                android:textColor="#000000" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#e8e8e8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/rounded_corner_up"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:padding="12dp"
                android:src="@drawable/ic_action_secure"
                android:layout_gravity="center"
                android:layout_height="48dp" />
            <EditText
                android:id="@+id/login_act_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:hint="Password"
                android:background="@null"
                android:textColorHint="#ffaeaeae"
                android:textColor="#000000" />
        </LinearLayout>

        <com.rey.material.widget.Button
            android:id="@+id/login_act_normal_log"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_corner_red"
            app:rd_enable="true"
            app:rd_rippleColor="#ffb34117"
            app:rd_maxRippleRadius="match_view"
            app:rd_rippleType="touch"
            android:text="Login"/>
        <com.rey.material.widget.Button
            android:id="@+id/login_act_fb_log"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:background="@drawable/rounded_corner_blue"
            app:rd_enable="true"
            app:rd_rippleColor="#ff223769"
            app:rd_maxRippleRadius="match_view"
            app:rd_rippleType="touch"
            android:text="Login With Facebook"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/log_act_for_pass"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="Forgot Password?" />
            <TextView
                android:id="@+id/log_act_create_id"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#fff"
                android:text="New Here? Sign Up" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>